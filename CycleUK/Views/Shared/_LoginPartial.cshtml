@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff","Account", FormMethod.Post, new { id = "logoutForm", @class="" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav">
            <li class="nav-item">
                @Html.ActionLink("Hello  " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage", @class = "nav-link text-light" })
            </li>
          <!--<li class="nav-item"><a href="javascript:document.getElementById('logoutForm').submit" class="nav-link text-light">Log off</a></li>-->
       
            <li class="nav-item">
                <button type="submit" value="Logout" class="btn btn-link text-light">Log Out</button>
            </li>
       
        </ul>
    }


}
else
{
    <ul class="nav navbar-nav">
        <li class="nav-item">@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink", @class = "nav-link text-light"})</li>
        <li class="nav-item">@Html.ActionLink("Admin", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "nav-link text-light"})</li>
    </ul>
}
